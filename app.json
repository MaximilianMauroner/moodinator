{
  "expo": {
    "name": "moodinator",
    "slug": "moodinator",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/icon-no-text.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.lab4code.moodinator",
      "infoPlist": {
        "NSCameraUsageDescription": "We use the camera to capture your daily picture for your note.",
        "NSPhotoLibraryUsageDescription": "We need access to your photo library so you can pick a picture for your note.",
        "NSPhotoLibraryAddUsageDescription": "We save the processed photo to your library when needed.",
        "NSLocationWhenInUseUsageDescription": "We use your location to tag your mood entries with where you were.",
        "NSMicrophoneUsageDescription": "We use the microphone to record voice memos for your mood entries.",
        "UIFileSharingEnabled": true,
        "LSSupportsOpeningDocumentsInPlace": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon-no-text.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.lab4code.moodinator",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/icon-no-text.png"
    },
    "plugins": [
      "expo-router",
      "expo-image-picker",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon-no-text.png",
          "imageWidth": 250,
          "resizeMode": "contain",
          "backgroundColor": "#FFDA61"
        }
      ],
      [
        "expo-sqlite",
        {
          "enableFTS": true,
          "useSQLCipher": true,
          "android": {
            "enableFTS": false,
            "useSQLCipher": false
          },
          "ios": {
            "customBuildFlags": [
              "-DSQLITE_ENABLE_DBSTAT_VTAB=1 -DSQLITE_ENABLE_SNAPSHOT=1"
            ]
          }
        }
      ],
      "expo-localization",
      [
        "expo-build-properties",
        {
          "android": {
            "packagingOptions": {
              "pickFirst": [
                "lib/x86/libc++_shared.so",
                "lib/x86_64/libc++_shared.so",
                "lib/arm64-v8a/libc++_shared.so",
                "lib/armeabi-v7a/libc++_shared.so"
              ]
            }
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon-no-text.png",
          "color": "#FFDA61",
          "defaultChannel": "default",
          "enableBackgroundRemoteNotifications": true
        }
      ],
      "expo-font",
      "expo-web-browser",
      "expo-location",
      [
        "expo-av",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone to record voice memos."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "427d083c-0bc1-4065-83cc-32d490e8cc06"
      }
    }
  }
}
